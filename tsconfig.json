{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict" : true,
    "skipLibCheck": true,
  },
  "include":
  [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
